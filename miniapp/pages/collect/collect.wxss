.page-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f0f4ff 0%, #ffffff 100%);
  padding: 24rpx;
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
}

/* 连接状态栏 */
.status-bar {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
  border-radius: 16rpx;
  margin-bottom: 32rpx;
  font-size: 26rpx;
}

.status-bar.connected {
  background: linear-gradient(135deg, #ecfdf5 0%, #d1fae5 100%);
  color: #059669;
}

.status-bar.disconnected {
  background: linear-gradient(135deg, #fef2f2 0%, #fee2e2 100%);
  color: #dc2626;
}

.status-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.connected .status-dot {
  background: #10b981;
  box-shadow: 0 0 8rpx #10b981;
}

.disconnected .status-dot {
  background: #ef4444;
  animation: blink 1s infinite;
}

@keyframes blink {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.4; }
}

.status-hint {
  margin-left: auto;
  font-size: 24rpx;
  opacity: 0.8;
}

/* 快速扫码区域 */
.quick-scan-section {
  display: flex;
  justify-content: center;
  margin-bottom: 40rpx;
}

.quick-scan-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 48rpx 80rpx;
  background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%);
  border-radius: 32rpx;
  box-shadow: 0 16rpx 48rpx rgba(79, 70, 229, 0.35);
  transition: all 0.3s ease;
}

.quick-scan-btn:active {
  transform: scale(0.96);
  box-shadow: 0 8rpx 24rpx rgba(79, 70, 229, 0.3);
}

.scan-icon-large {
  width: 120rpx;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.scan-frame-large {
  width: 100rpx;
  height: 100rpx;
  position: relative;
}

.corner-large {
  position: absolute;
  width: 24rpx;
  height: 24rpx;
  border-color: #ffffff;
  border-style: solid;
}

.corner-large.tl {
  top: 0;
  left: 0;
  border-width: 6rpx 0 0 6rpx;
  border-radius: 8rpx 0 0 0;
}

.corner-large.tr {
  top: 0;
  right: 0;
  border-width: 6rpx 6rpx 0 0;
  border-radius: 0 8rpx 0 0;
}

.corner-large.bl {
  bottom: 0;
  left: 0;
  border-width: 0 0 6rpx 6rpx;
  border-radius: 0 0 0 8rpx;
}

.corner-large.br {
  bottom: 0;
  right: 0;
  border-width: 0 6rpx 6rpx 0;
  border-radius: 0 0 8rpx 0;
}

.scan-line-large {
  position: absolute;
  top: 50%;
  left: 10rpx;
  right: 10rpx;
  height: 4rpx;
  background: linear-gradient(90deg, transparent, #ffffff, transparent);
  animation: scanAnimLarge 1.5s ease-in-out infinite;
}

@keyframes scanAnimLarge {
  0%, 100% { transform: translateY(-30rpx); opacity: 0.5; }
  50% { transform: translateY(30rpx); opacity: 1; }
}

.quick-scan-text {
  color: #ffffff;
  font-size: 36rpx;
  font-weight: 600;
}

.quick-scan-hint {
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
  margin-top: 8rpx;
}

/* 标题 */
.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2937;
}

.title-icon {
  margin-right: 12rpx;
}

/* 功能卡片网格 */
.feature-grid {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.feature-card {
  display: flex;
  align-items: center;
  padding: 32rpx;
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.feature-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.feature-card.scan {
  border-left: 8rpx solid #3b82f6;
}

.feature-card.vision {
  border-left: 8rpx solid #8b5cf6;
}

.feature-card.samples {
  border-left: 8rpx solid #10b981;
}

.feature-icon {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 44rpx;
  background: #f3f4f6;
  border-radius: 16rpx;
  margin-right: 24rpx;
}

.feature-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.feature-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 6rpx;
}

.feature-desc {
  font-size: 24rpx;
  color: #6b7280;
}

.feature-arrow {
  font-size: 40rpx;
  color: #9ca3af;
}

/* 使用说明 */
.tips-section {
  margin-top: 20rpx;
}

.tips-content {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.tip-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.tip-item:last-child {
  margin-bottom: 0;
}

.tip-num {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%);
  color: #ffffff;
  font-size: 22rpx;
  font-weight: 600;
  border-radius: 50%;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.tip-text {
  font-size: 26rpx;
  color: #4b5563;
  line-height: 1.5;
}
