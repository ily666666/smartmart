.page-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f0f4ff 0%, #ffffff 100%);
  padding: 24rpx;
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
}

/* 连接状态栏 */
.status-bar {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  font-size: 26rpx;
}

.status-bar.connected {
  background: linear-gradient(135deg, #ecfdf5 0%, #d1fae5 100%);
  color: #059669;
}

.status-bar.disconnected {
  background: linear-gradient(135deg, #fef2f2 0%, #fee2e2 100%);
  color: #dc2626;
}

.status-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.connected .status-dot {
  background: #10b981;
  box-shadow: 0 0 8rpx #10b981;
}

.disconnected .status-dot {
  background: #ef4444;
  animation: blink 1s infinite;
}

@keyframes blink {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.4; }
}

.status-hint {
  margin-left: auto;
  font-size: 24rpx;
  opacity: 0.8;
}

/* 功能入口卡片 */
.feature-cards {
  display: flex;
  gap: 20rpx;
  margin-bottom: 32rpx;
}

.feature-card {
  flex: 1;
  display: flex;
  align-items: center;
  padding: 32rpx 24rpx;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.feature-card:active {
  transform: scale(0.96);
}

.feature-card.reports {
  background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
}

.feature-card.analysis {
  background: linear-gradient(135deg, #8b5cf6 0%, #6d28d9 100%);
}

.card-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.card-info {
  display: flex;
  flex-direction: column;
}

.card-title {
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 600;
}

.card-desc {
  color: rgba(255, 255, 255, 0.8);
  font-size: 22rpx;
  margin-top: 4rpx;
}

/* 区块 */
.section {
  margin-bottom: 32rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2937;
}

/* 统计卡片网格 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.stat-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.stat-card.main {
  grid-column: span 2;
  background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%);
}

.stat-card.main .stat-value {
  font-size: 56rpx;
  color: #ffffff;
}

.stat-card.main .stat-label {
  color: rgba(255, 255, 255, 0.9);
}

.stat-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #1f2937;
}

.stat-label {
  font-size: 24rpx;
  color: #6b7280;
  margin-top: 8rpx;
}

.empty-hint {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 48rpx;
  text-align: center;
  color: #9ca3af;
  font-size: 28rpx;
}

/* 智能提醒 */
.alerts-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.alert-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.alert-item.restock {
  border-left: 8rpx solid #ef4444;
}

.alert-item.anomaly {
  border-left: 8rpx solid #f59e0b;
}

.alert-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.alert-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.alert-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
}

.alert-desc {
  font-size: 24rpx;
  color: #6b7280;
  margin-top: 4rpx;
}

.alert-arrow {
  font-size: 40rpx;
  color: #9ca3af;
}

/* 空提醒状态 */
.no-alerts {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 48rpx;
  background: #ffffff;
  border-radius: 20rpx;
  margin-bottom: 32rpx;
}

.no-alerts-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
}

.no-alerts-text {
  font-size: 28rpx;
  color: #059669;
}

/* 快捷入口 */
.quick-links {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
}

.quick-link {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 16rpx;
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.quick-link:active {
  transform: scale(0.95);
  background: #f3f4f6;
}

.link-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.link-text {
  font-size: 22rpx;
  color: #4b5563;
  text-align: center;
}
