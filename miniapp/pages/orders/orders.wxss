.page-container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom));
}

/* 筛选栏 */
.filter-section {
  background: #ffffff;
  padding: 20rpx 24rpx;
  margin-bottom: 2rpx;
}

.quick-dates {
  display: flex;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.quick-btn {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  background: #f3f4f6;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #4b5563;
  transition: all 0.3s ease;
}

.quick-btn.active {
  background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%);
  color: #ffffff;
}

.date-range {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.date-picker {
  flex: 1;
  padding: 16rpx 20rpx;
  background: #f9fafb;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #374151;
  text-align: center;
}

.date-separator {
  font-size: 26rpx;
  color: #9ca3af;
}

.search-btn {
  padding: 16rpx 28rpx;
  background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%);
  color: #ffffff;
  border-radius: 12rpx;
  font-size: 26rpx;
  font-weight: 500;
}

/* 统计栏 */
.stats-bar {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx;
  background: #ffffff;
  margin-bottom: 16rpx;
}

.stat-item {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.stat-label {
  font-size: 26rpx;
  color: #6b7280;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
}

.stat-value.amount {
  color: #4f46e5;
}

.stat-divider {
  width: 2rpx;
  height: 40rpx;
  background: #e5e7eb;
  margin: 0 32rpx;
}

/* 订单列表 */
.order-list {
  padding: 0 16rpx;
}

.order-item {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  position: relative;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.order-no {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
}

.order-status {
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.order-status.completed {
  background: #ecfdf5;
  color: #059669;
}

.order-status.pending {
  background: #fef3c7;
  color: #d97706;
}

.order-status.cancelled {
  background: #fef2f2;
  color: #dc2626;
}

.order-body {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.order-info {
  display: flex;
  flex-direction: column;
}

.order-amount {
  font-size: 40rpx;
  font-weight: 700;
  color: #4f46e5;
  margin-bottom: 8rpx;
}

.order-meta {
  font-size: 24rpx;
  color: #9ca3af;
}

.order-time {
  font-size: 24rpx;
  color: #9ca3af;
  text-align: right;
}

.order-arrow {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 48rpx;
  color: #d1d5db;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 48rpx;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #374151;
  margin-bottom: 12rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #9ca3af;
}

/* 加载状态 */
.loading-more {
  padding: 32rpx;
  text-align: center;
}

.loading-text {
  font-size: 26rpx;
  color: #9ca3af;
}

.no-more {
  padding: 32rpx;
  text-align: center;
  font-size: 26rpx;
  color: #d1d5db;
}
