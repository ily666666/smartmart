.page-container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: env(safe-area-inset-bottom);
}

/* Tab 栏 */
.tab-bar {
  display: flex;
  background: #ffffff;
  padding: 16rpx;
  gap: 12rpx;
  position: sticky;
  top: 0;
  z-index: 100;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 8rpx;
  border-radius: 12rpx;
  background: #f9fafb;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%);
}

.tab-icon {
  font-size: 32rpx;
  margin-bottom: 4rpx;
}

.tab-text {
  font-size: 22rpx;
  color: #6b7280;
}

.tab-item.active .tab-text {
  color: #ffffff;
}

/* 加载状态 */
.loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 120rpx;
  color: #9ca3af;
  font-size: 28rpx;
}

/* Tab 内容区 */
.tab-content {
  padding: 24rpx;
}

/* 日期选择器 */
.date-selector {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.quick-dates {
  display: flex;
  gap: 12rpx;
}

.quick-btn {
  padding: 12rpx 20rpx;
  background: #f3f4f6;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #4b5563;
}

.quick-btn.active {
  background: #4f46e5;
  color: #ffffff;
}

.date-picker-btn {
  padding: 12rpx 20rpx;
  background: #ffffff;
  border: 2rpx solid #e5e7eb;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #374151;
}

/* 主数据卡片 */
.main-stat-card {
  background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%);
  border-radius: 24rpx;
  padding: 48rpx;
  text-align: center;
  margin-bottom: 24rpx;
}

.main-stat-label {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  display: block;
  margin-bottom: 12rpx;
}

.main-stat-value {
  font-size: 72rpx;
  font-weight: 700;
  color: #ffffff;
}

/* 统计网格 */
.stat-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.stat-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  text-align: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.stat-icon {
  font-size: 36rpx;
  display: block;
  margin-bottom: 8rpx;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
  display: block;
}

.stat-label {
  font-size: 22rpx;
  color: #9ca3af;
  margin-top: 4rpx;
}

/* 区块 */
.section {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 20rpx;
}

/* 排行列表 */
.rank-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.rank-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f3f4f6;
}

.rank-item:last-child {
  border-bottom: none;
}

.rank-badge {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f3f4f6;
  border-radius: 50%;
  font-size: 24rpx;
  font-weight: 600;
  color: #6b7280;
  margin-right: 16rpx;
}

.rank-badge.rank-1 { background: #fef3c7; color: #d97706; }
.rank-badge.rank-2 { background: #f3f4f6; color: #6b7280; }
.rank-badge.rank-3 { background: #fed7aa; color: #c2410c; }

.rank-name {
  flex: 1;
  font-size: 28rpx;
  color: #1f2937;
}

.rank-stats {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.rank-qty {
  font-size: 26rpx;
  color: #4f46e5;
  font-weight: 600;
}

.rank-rev {
  font-size: 22rpx;
  color: #9ca3af;
}

/* 时间选择器 */
.time-selector {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.time-btn {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  background: #f3f4f6;
  border-radius: 16rpx;
  font-size: 26rpx;
  color: #4b5563;
}

.time-btn.active {
  background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%);
  color: #ffffff;
}

/* 产品排行列表 */
.product-rank-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.product-rank-item {
  display: flex;
  align-items: center;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.product-rank-item.top3 {
  background: linear-gradient(135deg, #fefce8 0%, #fef9c3 100%);
}

.rank-medal {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.rank-num {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f3f4f6;
  border-radius: 50%;
  font-size: 24rpx;
  color: #6b7280;
}

.product-info {
  flex: 1;
}

.product-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
  display: block;
}

.product-stock {
  font-size: 22rpx;
  color: #9ca3af;
}

.product-stats {
  text-align: right;
}

.sold-qty {
  font-size: 26rpx;
  font-weight: 600;
  color: #4f46e5;
  display: block;
}

.sold-rev {
  font-size: 24rpx;
  color: #059669;
}

/* 滞销列表 */
.warning-banner {
  background: #fef3c7;
  color: #92400e;
  padding: 20rpx 24rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.slow-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.slow-item {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.slow-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 16rpx;
  display: block;
}

.slow-stats {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.slow-row {
  display: flex;
  justify-content: space-between;
}

.slow-label {
  font-size: 24rpx;
  color: #6b7280;
}

.slow-value {
  font-size: 24rpx;
  font-weight: 600;
}

.slow-value.stock { color: #4f46e5; }
.slow-value.sold { color: #f59e0b; }
.slow-value.days { color: #059669; }
.slow-value.days.danger { color: #dc2626; }

.good-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx;
  background: #ecfdf5;
  border-radius: 20rpx;
}

.good-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.good-text {
  font-size: 32rpx;
  color: #059669;
  font-weight: 600;
}

/* 盈利卡片 */
.profit-cards {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.profit-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  text-align: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.profit-icon {
  font-size: 36rpx;
  display: block;
  margin-bottom: 8rpx;
}

.profit-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
  display: block;
}

.profit-value.positive { color: #059669; }
.profit-value.negative { color: #dc2626; }

.profit-label {
  font-size: 22rpx;
  color: #9ca3af;
  margin-top: 4rpx;
}

.info-tip {
  background: #fef3c7;
  color: #92400e;
  padding: 16rpx 20rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #9ca3af;
}
